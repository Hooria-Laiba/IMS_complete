@model List<IMSIdentity.Models.Product>
@{
    Layout = null;
    ViewData["Title"] = "Products";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HMH Mart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <style>
        :root {
            --hmh-teal: #008080;
            --hmh-light: #f8f9fa;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        .hmh-bg-teal {
            background-color: var(--hmh-teal);
        }

        .hmh-text-teal {
            color: var(--hmh-teal);
        }

        .card-hover {
            transition: all 0.3s;
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0, 128, 128, 0.05);
        }

            .card-hover:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(0, 128, 128, 0.1);
            }

        .product-img {
            height: 200px;
            object-fit: cover;
            border-radius: 16px 16px 0 0;
        }

        .btn-hmh {
            background-color: var(--hmh-teal);
            color: white;
            padding: 10px 25px;
            border-radius: 30px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .btn-hmh:hover {
                background-color: #006666;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

        .price-tag {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--hmh-teal);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark hmh-bg-teal py-3">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">
                <i class="bi bi-basket-fill me-2"></i>HMH Mart
            </a>
        </div>
    </nav>

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold hmh-text-teal">Products</h2>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card card-hover h-100">
                        <img src="/images/img3.png" class="card-img-top product-img" alt="@product.Name">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold mb-0">@product.Name</h5>
                                <span class="badge bg-secondary">@product.Type</span>
                            </div>
                            <p class="card-text text-muted small mb-2">@product.Description</p>

                            <div class="product-details mb-3">
                                <div class="row small">
                                    <div class="col-6">
                                        <span class="text-muted">Brand:</span>
                                        <span class="fw-medium">@product.Brand</span>
                                    </div>
                                    <div class="col-6 text-end">
                                        <span class="text-muted">Stock:</span>
                                        <span class="fw-medium">@product.Quantity units</span>
                                    </div>
                                </div>
                                <div class="row small">
                                    <div class="col-6">
                                        <span class="text-muted">Expiry:</span>
                                        <span class="fw-medium">@product.Expiry</span>
                                    </div>
                                    <div class="col-6 text-end">
                                         <span class="text-muted">Barcode:</span>
                                         <span class="fw-medium">@product.Barcode units</span>
                                    </div>
                                </div>
                            </div>

                                <div class="d-flex justify-content-between align-items-center">
                                <span class="price-tag">$@product.Price</span>
                                    <div class="btn-group">
                                        <a asp-controller="Admin" asp-action="Edit" asp-route-barcode="@product.Barcode" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-controller="Admin" asp-action="Delete" asp-route-barcode="@product.Barcode" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
    <footer class="hmh-bg-teal text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-box-seam me-2"></i>HMH Mart
                    </h5>
                    <p>Quality products for your everyday needs</p>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none">Home</a></li>
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none">Shop</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Contact</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4 bg-white">
            <div class="text-center">
                <p class="mb-0">© 2024 HMH Mart. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
        });
    </script>
</body>
</html>

