@model IEnumerable<Order>
@{
    Layout = null;
    ViewData["Title"] = "Orders";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HMH Mart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <style>
        :root {
            --hmh-teal: #008080;
            --hmh-light: #f8f9fa;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .hmh-bg-teal {
            background-color: var(--hmh-teal);
        }

        .hmh-text-teal {
            color: var(--hmh-teal);
        }

        .card-hover {
            transition: all 0.3s;
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0, 128, 128, 0.05);
        }

            .card-hover:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(0, 128, 128, 0.1);
            }

        .order-status {
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 500;
        }

        .status-processing {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-shipped {
            background-color: #d4edda;
            color: #155724;
        }

        .status-delivered {
            background-color: #d1ecf1;
            color: #0c5460;
        }

        .btn-hmh {
            background-color: var(--hmh-teal);
            color: white;
            padding: 10px 25px;
            border-radius: 30px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .btn-hmh:hover {
                background-color: #006666;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

        .content-wrapper {
            flex: 1;
            padding-bottom: 60px;
        }

        footer {
            background-color: var(--hmh-teal);
            color: white;
            padding: 2rem;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark hmh-bg-teal py-3">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">
                <i class="bi bi-box-seam me-2"></i>HMH Mart
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/catalogue">Continue Shopping</a>
                    </li>
                </ul>
                <div class="ms-lg-3 mt-3 mt-lg-0">
                    <a href="/profile" class="btn btn-light">
                        <i class="bi bi-person-circle me-1"></i> My Account
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="content-wrapper">
        <div class="container py-5">
            <div class="row mb-4">
                <div class="col-12">
                    <h2 class="fw-bold hmh-text-teal mb-4">
                        <i class="bi bi-clock-history me-2"></i>Order History
                    </h2>
                </div>
            </div>

            @foreach (var order in Model)
            {
                <div class="card card-hover mb-4">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-3">
                                <h5 class="fw-bold hmh-text-teal">#ORD-@order.Id</h5>
                                <small class="text-muted">Placed on @order.OrderDate.ToString("dd MMM yyyy")</small>
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="bi bi-truck hmh-text-teal fs-5"></i>
                                    <div>
                                        <div class="fw-bold">@order.OrderItems.Count() item(s)</div>
                                        <small class="text-muted">Standard Shipping</small>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <span class="order-status status-processing">Processing</span>

                            </div>
                            <div class="col-md-3 text-end">
                                <h5 class="fw-bold hmh-text-teal">$@order.TotalAmount.ToString("0.00")</h5>
                                <a href="#" class="btn btn-hmh mt-2">
                                    <i class="bi bi-eye me-1"></i>View Details
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            }


